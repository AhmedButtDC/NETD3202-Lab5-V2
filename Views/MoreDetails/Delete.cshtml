<!--This page allows user to delete an existing MoreDetail object-->
@model NETD3202_Lab5_V2.Models.MoreDetail

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Game ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.gID)
            </dd>
            <dt class="col-sm-3">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="gID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a style="color: black" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>