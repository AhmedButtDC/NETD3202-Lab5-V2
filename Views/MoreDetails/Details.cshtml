@model NETD3202_Lab5_V2.Models.MoreDetail

@{
    ViewData["Title"] = "Details";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <div>
        <h4>Game ID: @Html.DisplayFor(model => model.gID) - Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-5">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>
    </div>
    <div>
        <a style="color: black" asp-action="Edit" asp-route-id="@Model.gID">Edit</a>&nbsp;&nbsp;
        <a style="color: black" asp-controller="VideoGames" asp-action="Details" asp-route-id="@Model.gID">Back</a>
    </div>
</div>