<!--This page allows user to delete a VideoGame object-->
@model NETD3202_Lab5_V2.Models.VideoGame

@{
    ViewData["Title"] = "Delete";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <h1>Delete</h1>
    <hr />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Game Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.gameName)
            </dd>
            <dt class="col-sm-3">
                Release Year
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.releaseYear)
            </dd>
            <dt class="col-sm-3">
                ESRB
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.esrb)
            </dd>
            <dt class="col-sm-3">
                Rating
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.rating)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="gameID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a style="color: black" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>