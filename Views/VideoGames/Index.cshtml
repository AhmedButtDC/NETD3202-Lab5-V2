@model IEnumerable<NETD3202_Lab5_V2.Models.VideoGame>

@{
    ViewData["Title"] = "List";
}
<div style="margin-left: 30%; margin-right: 10%;">
    <h1>List</h1>

    <p>
        <a style="color: black" asp-action="Create">Add New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Game Name
                </th>
                <th>
                    Release Year
                </th>
                <th>
                    ESRB
                </th>
                <th>
                    Rating
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.gameName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.releaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.esrb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rating)
                </td>
                <td>
                    <a style="color: black" asp-action="Edit" asp-route-id="@item.gameID">Edit</a> |
                    <a style="color: black" asp-action="Details" asp-route-id="@item.gameID">Details</a> |
                    <a style="color: black" asp-action="Delete" asp-route-id="@item.gameID">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>